# Definir a função de atualização do sistema
fun_attlist() {
    # Criar diretório oculto, se não existir
    if [[ ! -d /usr/share/.plus ]]; then
        mkdir /usr/share/.plus
    fi

    # Registrar a data da atualização
    echo "crz: $(date)" > /usr/share/.plus/.plus
}

