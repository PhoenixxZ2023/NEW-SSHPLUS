#!/bin/bash
clear
echo -e "\033[1;32mDESEJA DESINSTALAR O SSH-PLUS ?\033[1;33m"
read -p "Deseja Remover? [s/n] " resp
if [[ "$resp" = s || "$resp" = S ]]; then
    # Remove packages
    for pkg in screen nmap figlet squid squid3 dropbear apache2 proxy; do
        apt-get purge "$pkg" -y > /dev/null 2>&1 || echo "Failed to remove $pkg"
    done

    # Remove SSH-Plus files
    rm -rf /bin/SSHPlus* /root/{BOT,Plus,*.sh,*.py,usuarios.db} \
           /etc/SSHPlus* /dev/SSHPlus* \
           /bin/{.criar,ackclear,addhost,...} \
           /etc/{.criar,ackclear,addhost,...} \
           /root/{.criar,ackclear,addhost,...} > /dev/null 2>&1 || echo "Failed to remove some files"

    # Remove specific directory
    rm -rf /etc/SSHPlus > /dev/null 2>&1 || echo "Failed to remove /etc/SSHPlus"

    clear
    echo -e "\033[1;36mObrigado por utilizar o SSH-PLUS --- TELEGRAM---> @TURBONET2023\033[1;33m"
    sleep 2
    echo -e "\033[1;31mSCRIPT REMOVIDO COM SUCESSO ✔️\033[0m"
    echo ""
    read -p "Reboot server now? [s/n] " reboot_resp
    if [[ "$reboot_resp" = s || "$reboot_resp" = S ]]; then
        echo -e "\033[1;31mREINICIANDO SERVIDOR... \033[0m"
        sleep 3
        clear
        reboot
    fi
else
    echo "Uninstallation cancelled."
fi
